<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/frame_top"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="1"
            android:orientation="vertical"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tv_my_habit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="@string/my_habit"
                android:textColor="@color/sapphire"
                android:textSize="22sp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_hills"
                android:layout_width="392dp"
                android:layout_height="121dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="12dp"
                android:background="@drawable/roundstyle_image"
                android:scaleType="fitXY"
                android:src="@drawable/image_hills_png" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="1"
                tools:listitem="@layout/item_habit" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/foto"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="4.2"
            android:layout_marginBottom="80dp"
            android:visibility="gone"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/frame_top"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2.5"
                android:layout_gravity="center_horizontal|top"
                android:scaleType="centerInside"
                android:src="@drawable/foto" />

            <TextView
                android:id="@+id/tv_click_button"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="@string/add_habit_text"
                android:textColor="@color/sapphire"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_arrow"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal|bottom"
                android:paddingStart="104dp"
                android:paddingEnd="0dp"
                android:scaleType="centerInside"
                android:src="@drawable/vector_arrow" />
        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout><!--TODO картинка расхардкодить(?) -->

